<?xml version="1.0" encoding="utf-8"?><android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="match_parent"    android:layout_height="120dp"    android:layout_margin="0.5dp"    xmlns:card_view="http://schemas.android.com/apk/res-auto"    android:orientation="vertical"    card_view:cardCornerRadius="4dp">    <LinearLayout        android:layout_margin="4dp"        android:id="@+id/card_view"        android:weightSum="2"        android:layout_width="match_parent"        android:layout_height="match_parent"        android:layout_gravity="center"        android:orientation="vertical" >        <ImageView            android:id="@+id/ivCategory"            android:layout_width="match_parent"            android:layout_height="match_parent"            android:layout_gravity="center"            android:layout_margin="7dp"            android:layout_weight="1"            android:src="@drawable/product" />        <TextView            android:id="@+id/tvCategoryName"            android:layout_width="match_parent"            android:layout_height="match_parent"            android:layout_weight="1"            android:gravity="center"            android:text="test"            android:textSize="14dp" />    </LinearLayout></android.support.v7.widget.CardView>